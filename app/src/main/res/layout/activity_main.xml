<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFragments"
        android:layout_marginHorizontal="10dp"
        app:cornerRadius="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fragments"
        app:layout_constraintBottom_toTopOf="@+id/btnMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIntents" />

    <Button
        android:id="@+id/btnIntents"
        android:layout_marginHorizontal="10dp"
        app:cornerRadius="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Passing Intents"
        app:layout_constraintBottom_toTopOf="@+id/btnFragments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMatch3" />

    <Button
        android:id="@+id/btnMidterm"
        android:layout_marginHorizontal="10dp"
        app:cornerRadius="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Midterm Exam"
        app:layout_constraintBottom_toTopOf="@+id/btnMatch3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalculatorExercise"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/btnLayoutExercise"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:text="Layout Exercise"
        app:layout_constraintBottom_toTopOf="@+id/btnButtonExercise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnButtonExercise"
        android:layout_marginHorizontal="10dp"
        app:cornerRadius="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Button Exercise"
        app:layout_constraintBottom_toTopOf="@+id/btnCalculatorExercise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLayoutExercise" />

    <Button
        android:id="@+id/btnCalculatorExercise"
        android:layout_marginHorizontal="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calculator Exercise"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMidterm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnButtonExercise" />

    <Button
        android:id="@+id/btnMatch3"
        android:layout_marginHorizontal="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Match3 Exercise"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnIntents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMidterm" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Menus"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMaps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFragments" />

    <Button
        android:id="@+id/btnMaps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:cornerRadius="10dp"
        android:text="Maps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenu" />
</androidx.constraintlayout.widget.ConstraintLayout>